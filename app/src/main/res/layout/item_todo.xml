<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    android:padding="0.2dp"
    app:cardCornerRadius="10dp"
    android:clickable="true"
    android:focusable="true"
    android:checkable="true"
    >
    <RelativeLayout
        android:id="@+id/rlItem"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@drawable/item_background">
        <TextView
            android:id="@+id/tvItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Title"
            android:fontFamily="@font/dmsans"
            android:textColor="@color/colorAccent"
            android:textAllCaps="true"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/tvItemStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Status"
            android:fontFamily="@font/dmsans"
            android:layout_below="@+id/tvItemTitle"
            android:layout_marginStart="60dp"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvItemDueDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Due date"
            android:fontFamily="@font/dmsans"
            android:layout_toEndOf="@+id/tvItemStatus"
            android:layout_below="@+id/tvItemTitle"
            android:layout_marginLeft="120dp"/>
        <TextView
            android:id="@+id/tvItemPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Priority"
            android:fontFamily="@font/dmsans"
            android:layout_below="@+id/tvItemDueDate"
            android:layout_alignStart="@+id/tvItemDueDate"
            android:textStyle="italic"
            />


        <TextView
            android:id="@+id/tvItemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Description"
            android:layout_marginStart="60dp"
            android:fontFamily="@font/dmsans"
            android:layout_below="@+id/tvItemPriority"/>




    </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
